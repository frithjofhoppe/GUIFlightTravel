<UserControl x:Class="GUITravel.TextBoxWithSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUITravel"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="215
             " KeyboardNavigation.TabNavigation="Once">
    <Grid>
        <TextBox x:Name="TBWithSelection" HorizontalAlignment="Left" VerticalAlignment="Top"
                   Width="215"
                   GotKeyboardFocus="TBWithSelection_GotKeyboardFocus"
                   GotMouseCapture="TBWithSelection_GotMouseCapture" Height="26"
                 TextChanged="TBWithSelection_TextChanged"
                 />
    </Grid>
</UserControl>
