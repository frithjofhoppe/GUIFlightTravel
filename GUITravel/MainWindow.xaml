<Window x:Class="GUITravel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUITravel"
        mc:Ignorable="d"
        Title="MainWindow" Height="425" Width="457.5" WindowStartupLocation="CenterScreen" Icon="accomodation.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <Button x:Name="btnKunde" Click="btnKunde_Click">Kunden</Button>
            <Button>Reisen</Button>
            <Button x:Name="btnHotel" Click="btnHotel_Click">Hotels</Button>
            <Button>Listen</Button>
            <Button>Einstellungen</Button>
        </StackPanel>
        <Grid Grid.Column="1" Name="showPlace" HorizontalAlignment="Left">

        </Grid>
    </Grid>
</Window>
